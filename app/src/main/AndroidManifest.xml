<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Quyền thông báo -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- Quyền đọc trạng thái thiết bị (để biết app đang chạy) -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    
    <!-- Quyền truy cập camera (nếu cần) -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Quyền đọc/ghi file (nếu cần) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    
    <!-- Quyền truy cập vị trí (nếu cần) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TXAHub"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        
        <!-- Splash Screen Activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.TXAHub.Splash"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Deep Link: txahub:// -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="txahub" />
            </intent-filter>
            
            <!-- HTTP/HTTPS links có thể mở app -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="txahub.click" />
            </intent-filter>
        </activity>
        
        <!-- Changelog Activity -->
        <activity
            android:name=".ChangelogActivity"
            android:exported="false"
            android:theme="@style/Theme.TXAHub"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="adjustResize">
            
            <!-- Deep Link: txahub:// -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="txahub" />
            </intent-filter>
            
            <!-- HTTP/HTTPS links có thể mở app -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="txahub.click" />
            </intent-filter>
        </activity>
    </application>

</manifest>

