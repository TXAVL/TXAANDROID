<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/txa_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/txa_primary"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="@color/white"
            android:contentDescription="Quay lại" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cài đặt"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Quyền -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quyền ứng dụng"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/txa_primary"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:id="@+id/layoutPermissions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Thông tin phiên bản -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin phiên bản"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/txa_primary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvVersionInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đang tải..."
                android:textSize="14sp"
                android:textColor="@color/txa_text_primary"
                android:padding="16dp"
                android:background="@drawable/bg_permission_item"
                android:lineSpacingExtra="4dp" />

            <!-- Nút Check Update -->
            <Button
                android:id="@+id/btnCheckUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kiểm tra cập nhật"
                android:textColor="@color/white"
                android:backgroundTint="@color/txa_primary"
                android:layout_marginTop="24dp"
                android:padding="16dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

            <!-- Nút SpeedTest -->
            <Button
                android:id="@+id/btnSpeedTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kiểm tra tốc độ mạng"
                android:textColor="@color/white"
                android:backgroundTint="@color/txa_primary"
                android:layout_marginTop="24dp"
                android:padding="16dp" />

            <!-- Nút mở file log (chỉ hiện khi đã cấp quyền ghi file) -->
            <Button
                android:id="@+id/btnOpenLogFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mở file log"
                android:textColor="@color/white"
                android:backgroundTint="@color/txa_primary"
                android:layout_marginTop="24dp"
                android:padding="16dp"
                android:visibility="gone" />

            <!-- Cài đặt thông báo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cài đặt thông báo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/txa_primary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp" />

            <!-- Nhạc chuông thông báo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_permission_item"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nhạc chuông thông báo"
                    android:textSize="16sp"
                    android:textColor="@color/txa_text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvNotificationSound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đang tải..."
                    android:textSize="14sp"
                    android:textColor="@color/txa_text_secondary"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnChangeNotificationSound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thay đổi nhạc chuông"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/txa_primary"
                    android:padding="12dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

