<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_permission_item"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/ivPermissionStatus"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_check_gray"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tvPermissionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Tên quyền"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnGrantPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cấp quyền"
        android:textSize="14sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

</LinearLayout>

