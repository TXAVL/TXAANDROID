<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:padding="0dp">

    <!-- Header: Version Name -->
    <LinearLayout
        android:id="@+id/layoutVersionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/tvVersionName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1.4.0_txa"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvCurrentBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(hiện tại)"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:visibility="gone"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/ivExpand"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_down"
            android:layout_marginStart="8dp"
            android:tint="@color/purple_500" />

    </LinearLayout>

    <!-- Content: Changelog (ẩn/hiện) -->
    <LinearLayout
        android:id="@+id/layoutChangelogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tvReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày phát hành: 2025-11-14"
            android:textSize="12sp"
            android:textColor="@color/darker_gray"
            android:layout_marginBottom="8dp" />

        <WebView
            android:id="@+id/webViewChangelog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="100dp" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

</LinearLayout>

