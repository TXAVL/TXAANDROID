<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TXAHub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/txa_primary</item>
        <item name="colorPrimaryVariant">@color/txa_primary_variant</item>
        <item name="colorOnPrimary">@color/txa_text_on_primary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/txa_secondary</item>
        <item name="colorSecondaryVariant">@color/txa_secondary_variant</item>
        <item name="colorOnSecondary">@color/txa_text_on_secondary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/txa_background</item>
        <item name="colorSurface">@color/txa_surface</item>
        <item name="colorOnSurface">@color/txa_text_primary</item>
        <item name="colorOnBackground">@color/txa_text_primary</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Action bar -->
        <item name="actionBarStyle">@style/TXAHubActionBar</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/TXAHubButton</item>
        
        <!-- Customize your theme here. -->
    </style>
    
    <!-- Action Bar Style -->
    <style name="TXAHubActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">?attr/colorPrimary</item>
        <item name="titleTextColor">@color/txa_text_on_primary</item>
        <item name="subtitleTextColor">@color/txa_text_on_primary</item>
    </style>
    
    <!-- Button Style -->
    <style name="TXAHubButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/txa_primary</item>
        <item name="android:textColor">@color/txa_text_on_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.TXAHub.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/txa_primary</item>
        <item name="android:statusBarColor">@color/txa_primary_variant</item>
        <item name="android:navigationBarColor">@color/txa_primary_variant</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>

